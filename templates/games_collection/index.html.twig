{% extends 'base.html.twig' %}

{% block title %}GamesCollection index{% endblock %}

{% block body %}
    <h1>GamesCollection index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for games_collection in games_collections %}
            <tr>

                <td>{{ games_collection.name }}</td>
                <td>
                    <a href="{{ path('app_games_collection_show', {'id': games_collection.id}) }}">show</a>
                    <a href="{{ path('app_games_collection_edit', {'id': games_collection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_games_collection_new') }}">Nouvelle collection</a>
    <a href="{{ path('app_user_index') }}"> profil</a>
{% endblock %}

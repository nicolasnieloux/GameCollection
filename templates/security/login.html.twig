{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container-fluid">
        <div class="row">
            <img src="{{ asset('img/accueil.jpg') }}" alt="image de l'accueil" class="col-sm-6">
            <div class="col-sm-6 text-center align-content-center ">
                <img src="{{ asset('img/logo.png') }}" alt="logo" class="mb-5 pt-5">
                <h1 class="fs-4">Please sign in</h1>

                <form action="{{ path('app_login') }}" method="post">

                    <label for="username" class="m-3">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username"
                           class="form-control"
                           autocomplete="email" required autofocus>

                    <label for="password" class="m-3">Password</label>
                    <input type="password" name="_password" id="password" class="form-control"
                           autocomplete="current-password"
                           required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >


                    {#            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                    {#            See https://symfony.com/doc/current/security/remember_me.html #}

                    {#            <div class="checkbox mb-3"> #}
                    {#                <label> #}
                    {#                    <input type="checkbox" name="_remember_me"> Remember me #}
                    {#                </label> #}
                    {#            </div> #}


                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>

                <a href="{{ path('app_user_new') }}">New user ?</a>
            </div>
        </div>
    </div>
{% endblock %}
